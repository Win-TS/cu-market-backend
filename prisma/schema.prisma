generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  studentId String   @unique
  firstName String
  lastName  String

  products Product[]
  // reviews Review[]

  @@map("users")
}

model Product {
  id          Int      @id @default(autoincrement())
  studentId   String
  productName String
  description String
  startPrice  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  available   Boolean
  address     String

  user User @relation(fields: [studentId], references: [studentId])
  // reviews Review[]

  @@map("products")
}

